# Environment variables template for QC Bike Path ETL service
# Copy this file to .env and configure with your actual values

# API Configuration
QC_BIKE_PATH_API_BASE_URL=https://www.donneesquebec.ca/recherche/api/3/action/datastore_search
QC_BIKE_PATH_BIKE_PATH_RESOURCE_ID=your-resource-id-here
QC_BIKE_PATH_API_TIMEOUT=30
QC_BIKE_PATH_API_RETRY_ATTEMPTS=3

# MongoDB Configuration  
QC_BIKE_PATH_MONGODB_URL=mongodb://localhost:27017
QC_BIKE_PATH_MONGODB_DATABASE=qc_bike_path
QC_BIKE_PATH_MONGODB_COLLECTION=bike_paths
QC_BIKE_PATH_MONGODB_TIMEOUT=5000

# Application Configuration
QC_BIKE_PATH_LOG_LEVEL=INFO
QC_BIKE_PATH_LOG_FORMAT=json
QC_BIKE_PATH_BATCH_SIZE=1000
QC_BIKE_PATH_ENVIRONMENT=development
QC_BIKE_PATH_DEBUG=false

# Optional features
QC_BIKE_PATH_ENABLE_CACHING=true
QC_BIKE_PATH_CACHE_TTL_SECONDS=3600